- provide(:title, 'Edit User')
%h1
  Update Your Profile 

.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'fields', f: f

      = f.submit 'Save Changes', class: 'btn btn-primary'

    %br
    = gravatar_for @user

    = link_to 'Change', 'http://gravatar.com/emails',
      target: :_blank
